default_platform(:android)

platform :android do
  desc "Build and upload a release bundle to Google Play internal testing"
  lane :internal do |options|
    release_notes = options[:release_notes] || ENV["RELEASE_NOTES"] || "Android internal testing build from CI"
    package_name = ENV["ANDROID_PACKAGE_NAME"] || "com.supabase"

    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "."
    )

    supply(
      aab: "app/build/outputs/bundle/release/app-release.aab",
      track: "internal",
      json_key: "fastlane/google-play-service-account.json",
      package_name: package_name,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      whats_new: {
        "en-US" => release_notes
      }
    )
  end
end


